  	<!-- 할일 유형 등록 -->
	<insert id="insertType">
		INSERT INTO todo_type 
		VALUES(todo_type_seq.nextval,#{todo_type_title},#{todo_type_contents})
	</insert>


	<!-- 유형 목록 조회 -->
	<select id="getTypeList" resultType="TodotypeDto">
		SELECT todo_type_no,todo_type_title,todo_type_contents 
		FROM todo_type
		ORDER BY todo_type_no desc
	</select>
	


</mapper>