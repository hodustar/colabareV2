<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cot.colabare.mapper.TodoMapper">


	<!-- 할일 등록 -->
	<insert id="insertTodo">
		INSERT INTO todo_list

		VALUES(
		todo_list_seq.nextval,#{todo_title},#{todo_contents},sysdate,null,
		'n',#{todo_priority},0,#{todo_type_no},'n',null,null)


	</insert>

	<!-- 목록 조회 -->
	<select id="getTodoList" resultType="TodoDto">
		SELECT
		todo_no,todo_title,todo_contents,todo_priority,
		upload_on_cal,startdate,enddate

		FROM todo_list

		<!-- WHERE todo_type_no = #{todo_type_no} -->

		ORDER BY todo_no desc
	</select>



